- tooltip = properties[:tooltip]
.field.js-field
  .field__content.field__content--checkbox{ class: (tooltip and !tooltip.nil?) ? 'tooltip--container' : '' }
    .input__container.js-input{ class: properties[:error] ? 'field__input--error' : nil }
      %input.input--checkbox{ type: "checkbox", name: properties[:name], id: properties[:id], checked: properties[:checked] ? 'checked' : nil, data: properties[:data], value: properties[:value], data: properties[:rules] ? { rules: properties[:rules] } : {} }
      = render :partial => 'components/forms/partials/tooltip', :locals => { tooltip: properties[:tooltip] }
      %label.js-field-label{ for: properties[:id] }<
        = properties[:label]
      - if properties[:error]
        .field__error.js-error
          = properties[:error]
