%article.card.card--link.card--single.card--extended-content--half.js-single.js-card{ class: "card--link--#{stack_item.title.downcase}"}
  %a.link--wrapper(href="#{stack_item.url}")
    - if stack_item.count
      %span.card__item-count
        = stack_item.count
    %figure.card__hero
      = image_tag("cards/#{stack_item.title.downcase}.png", class: 'portrait card__image', :alt => "#{stack_item.title}")
    .card__content
      %span.card__context
        Collection
      %h2.card__name.js-card-name
        #{stack_item.title} in #{place}
