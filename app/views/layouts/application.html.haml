!!! 5
%html.no-js
  %head
    = render 'layouts/application_partials/head'
  %body{class: client_browser(request.user_agent) }
    .wrap
      = render 'layouts/application_partials/header'
      = render 'layouts/application_partials/title_bar', { style: 'green' }
      .content
        = yield :secondary
        = yield
      = render 'layouts/application_partials/footer'
    .js-config.is-hidden   
      = js_configuration        
      = requirejs_include_tag 'app_common' 
      = yield :scripts

