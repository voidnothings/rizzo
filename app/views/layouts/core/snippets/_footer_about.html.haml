.row.row--footer--about
  .row__inner.row__inner--footer
    .wv--split--left.nav--inline
      %a.wv--inline-block.nav__item.row--footer--about__logo.media--lp-logo.media--lp-logo--dark(href='http://www.lonelyplanet.com')
      .nav__item.wv--nav--inline
        - footer_nav_about_items.each do |item|
          %a.nav__item.nav__item--about{href: "http://www.lonelyplanet.com#{item[:url]}"}<
            = item[:title].html_safe

    .wv--split--right
      .nav--inline.nav--social.split--right__inner
        %a.wv--hidden.row--footer--social__logo.media--lp-logo.media--lp-logo--dark(href='http://www.lonelyplanet.com')
        .title--footer.title--social.nav__item Follow us
        .nav--social__inner.nav__item
          .nav--inline
            - social_media_nav.each do |item|
              %a.nav__item.nav__item--social{href: "#{item[:url]}", class: "icon--#{item[:title]}"}
                = item[:title].capitalize



.row.row--smallprint
  .row__inner.row__inner--footer.row--smallprint__inner
    .wv--split--left.text--legal
      %p
        &copy; 
        = Time.now.year 
        Lonely Planet. All rights reserved. No part of this site may be reproduced without our written permission.
    
    - if language_select
      .wv--split--right
        %form.split--right__inner.nav--inline#js-language.form--language(action="http://www.lonelyplanet.com/international")
          %label.nav__item.form--language__label.title--footer(for="select-language") International
          .nav__item.dropdown.dropdown--language.js-select-language
            %label.dropdown__value.dropdown__value--language.js-select-overlay(href='#select-language')
              English
            %select.dropdown__select.js-select{name: "language", id: 'languageSelect'}
              - language_options.each do |d|
                %option(value="#{d[0]}")
                  = d[1].html_safe
          %input.input--submit.submit--language(name="Go" type="submit" value="Go")
